#!/usr/bin/env bash
set -xe

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
ARCH=$1
PLAT=$2
LCBVER=${LCBVER:-2.7.6}

echo "Installing libcouchbase $ARCH"
./lsetup_lcb $LCBVER $ARCH $PLAT

 echo "Installing Node.js $ARCH"
 ./lsetup_njs njs 0.10.48 $ARCH $PLAT
 ./lsetup_njs njs 0.12.17 $ARCH $PLAT
 ./lsetup_njs njs 4.6.1 $ARCH $PLAT
 ./lsetup_njs njs 5.12.0 $ARCH $PLAT
 ./lsetup_njs njs 6.9.4 $ARCH $PLAT
 ./lsetup_njs njs 7.4.0 $ARCH $PLAT

echo "Installing PHP $ARCH"
./lsetup_php 5.4.45 $ARCH $PLAT
./lsetup_php 5.5.38 $ARCH $PLAT
./lsetup_php 5.6.31 $ARCH $PLAT
./lsetup_php 7.0.21 $ARCH $PLAT
./lsetup_php 7.1.7 $ARCH $PLAT
